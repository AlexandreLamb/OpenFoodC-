<Page x:Class="OpenFood_C_Sharp.PeoplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenFood_C_Sharp"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="500"
      Background="LightGray"

      Title="PeoplePage">

    <Grid HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="500">
        <Label x:Name="name">Name : </Label>

        <Label x:Name="height" Margin="0,40,0,-40">Height :</Label>

        <Label x:Name="mass" Margin="0,26,0,-26">Mass:</Label>
    </Grid>
</Page>
