<Page x:Class="OpenFood_C_Sharp.View.FilmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenFood_C_Sharp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="LightGray"
      Title="FilmPage">

    <Grid HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="500">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="233*"/>
        </Grid.ColumnDefinitions>
        
            <Label x:Name="title" Grid.ColumnSpan="2">Title :</Label>

        <Label Margin="0,46,267,376" Grid.ColumnSpan="2" >Characters :</Label>
        <ListBox x:Name="ListCharacters" Margin="80,46,53,326" Grid.ColumnSpan="1"/>
        <ListBox x:Name="ListSpaceShip" Margin="80,146,53,226" Grid.ColumnSpan="1"/>
        <Label x:Name="spaceShip" Margin="0,146,192,-146">SpaceShip :</Label>

    </Grid>
</Page>
