        <Label Margin="0,46,267,376" Grid.ColumnSpan="2" >Characters :</Label>
        <ListBox x:Name="ListCharacters" Margin="80,46,87,213" Grid.ColumnSpan="1"/>
        <TabControl x:Name="PeopleTab" TabStripPlacement="Top" Margin="93,46,-179,167" Grid.Column="1">
            
        </TabControl>

    </Grid>
</Page>
